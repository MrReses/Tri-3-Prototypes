<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Money Manager</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">

</head>

<body style="background-color: rgb(200, 250, 200)">

    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="stuffDetail">
            <a class="btn-large waves-effect waves-light" href="/stuff">
                <i class="material-icons left">arrow_back</i>See all of your purchases!</a>
            <h3>Purchase details:</h3>
            <table>
                <tr>
                    <th>Item:</th>
                    <td><%= item %></td>
                </tr>
                <tr>
                    <th>Amount:</th>
                    <td><%= amount %></td>
                </tr>
                <tr>
                    <th>Price:</th>
                    <td><%= price %></td>

                </tr>
                <tr>
                    <th>Total Price:</th>
                    <td><%= "$" + amount * price %></td>
                </tr>
                <tr>
                    <th>Reason for Purchase:</th>
                    <td>
                        <%= reason_for_buying %>
                    </td>
                </tr>
            </table>
        </div>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light left modal-trigger" href="#stuffEdit">
                <i class="material-icons right">edit</i>Edit
            </a>
            <a class="btn-large waves-effect waves-light blue right" href="/stuff/item/<%= id %>/delete">
                <i class="material-icons right">delete</i>Delete
            </a>
        </div>


        <div class="modal" id="stuffEdit" style="background-color: rgb(200, 250, 200)">

            <div class="modal-content">

                <h3>Edit item:</h3>
                <form method="post" action="/stuff/item/<%= id%>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="name">Item Name:</label>
                            <input type="text" name="name" id="nameInput" data-length="32" value="<%= item%>" required>
                        </div>
                        <div class="input-field col s6">
                            <label for="quantity">Item Amount:</label>
                            <input type="number" name="quantity1" id="quantity1Input" value=<%= amount%> required>
                        </div>
                        <div class="input-field col s6">
                            <label for="quantity">Item Price:</label>
                            <input type="number" name="quantity2" id="quantity2Input" value=<%= price%> required>
                        </div>
                        <div class="input-field col s6">
                            <label for="description">Reason for Purchase:</label>
                            <input type="text" name="description" id="descriptionInput" value="<%= reason_for_buying%>" data-length="100" required>
                        </div>
                    </div>
                    <div class="modal-footer" style="background-color: rgb(200, 250, 200)">
                        <button class="btn waves-effect waves-light " type="submit"><i
                                class="material-icons right">send</i>Submit</button>

                        <a href="#!" class="modal-close waves-effect waves-light blue btn">Nevermind</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>
    
</body>

</html>